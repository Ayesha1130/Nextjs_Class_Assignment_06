{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    // Unused variables ki warning ko off karna
    "@typescript-eslint/no-unused-vars": "warn", 
    
    // 'any' type ka use allow karna
    "@typescript-eslint/no-explicit-any": "off",

    // Unescaped entities ke liye warning ko disable karna (single quotes issue)
    "react/no-unescaped-entities": "off", 

    // next/image warnings ko disable karna agar zarurat ho
    "@next/next/no-img-element": "off"
  }
}
